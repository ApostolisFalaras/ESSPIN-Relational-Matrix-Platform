                                            <dd><%=res.selection_dependent%></dd>
                                            <% if (res.selection_dependent.startsWith("Other")) { %>
                                                <dt>Other Dependent Variable</dt>
                                                <dd><%=res.other_dependent%></dd>
                                            <% } %>

                                            <dt>Independent Variable:</dt>
                                            <dd><%=res.selection_independent%></dd>
                                            <% if (res.selection_independent.startsWith("Other")) { %>
                                                <dt>Other Independent Variable</dt>
                                                <dd><%=res.other_independent%></dd>
                                            <% } %>

                                            <!-- Variables Relationship Subsection in the Results Card -->
                                            <dt>Type</dt>
                                            <dd>Causal</dd>
                                            
                                            <dt>Effect Direction</dt>
                                            <dd><%=res.effect_direction%></dd>

                                            <% if (res.variable_condition) { %>
                                                <dt>Conditional Variable</dt>
                                                <dd><%=res.variable_condition%></dd>

                                                <% if (res.variable_condition.startsWith("Other")) { %>
                                                    <dt>Other Conditional Variable</dt>
                                                    <dd><%=res.other_condition%></dd>
                                                <% } %>
                                                <dt>Conditional Effect</dt>
                                                <dd><%=res.type_of_condition_effect%></dd>
                                            <% } %>

                                            <!-- Additional Details about the current Finding -->
                                            <dt>Years</dt>
                                            <dd><%=res.start_year%> - <%=res.end_year%></dd>
                                            <dt>Countries</dt>
                                            <dd>Europe</dd>
                                        </dl>

                                        <div class="notes-text-frame">
                                            <textarea placeholder="Write your note..."></textarea>

                                            <div>
                                                <form action="/delete-note" method="POST" target="hidden-frame">

                                                    <input type="hidden" name="resultCardId" value="<%= res.id %>">
                                                    <input type="hidden" name="resultsCardTable" value="<%= res.table %>">

                                                    <button type="submit" class="delete-note">Delete</button>
                                                </form>

                                                <button type="button" class="cancel-note">Cancel</button>

                                                <form action="/save-note" method="POST" target="hidden-frame">

                                                    <input type="hidden" name="resultCardId" value="<%= res.id %>">
                                                    <input type="hidden" name="resultsCardTable" value="<%= res.table %>">
                                                    <input type="hidden" name="noteText" value="<%= res.note %>">

                                                    <button type="submit" class="save-note">Save</button>
                                                </form>
                                                
                                            </div>
                                        </div>

                                    </div>
                                <% } else if (res.table === "Correlations Table") { %>

                                    <!-- Results card for an Correlation Inputs Finding -->
                                    <div class="result-card <%= res.effect_for_color %>">

                                        <!-- Results Card Header -->
                                        <form action="/bookmark-result-card" method="POST" target="hidden-frame"> 
                                            <input type="hidden" name="resultCardId" value="<%= res.id %>" id="result-card-id">
                                            <input type="hidden" name="resultCardTable" value="<%= res.table %>" id="result-card-table">

                                            <div class="bookmark-wrapper selected">
                                                <div class="bookmark selected <%= res.effect_for_color %>"></div>
                                            </div>
                                        </form>

                                        <h3 class="<%= res.effect_for_color %>"><%= index+1 %>. <%= res.table %></h3>

                                        <dl>
                                            <!-- Variables Subsection in the Results Card -->
                                            <dt>Dependent Variable:</dt>
                                            <dd><%=res.dependent_variable%></dd>

                                            <dt>Independent Variable:</dt>
                                            <dd><%=res.independent_variable%></dd>

                                            <!-- Variables Relationship Subsection in the Results Card -->
                                            <dt>Correlation in 2000</dt>
                                            <dd><%= parseFloat(res.correlation_2000).toFixed(3) %></dd>
                                            <dt>Correlation in 2023</dt>
                                            <dd><%= parseFloat(res.correlation_2023).toFixed(3) %></dd>

                                            <!-- Additional Details about the current Finding -->
                                            <dt>Years</dt>
                                            <dd>2000 - 2023</dd>
                                            <dt>Countries</dt>
                                            <dd>Europe</dd>
                                        </dl>

                                        <div class="notes-text-frame">
                                            <textarea placeholder="Write your note..."></textarea>

                                            <div>
                                                <form action="/delete-note" method="POST" target="hidden-frame">

                                                    <input type="hidden" name="resultCardId" value="<%= res.id %>">
                                                    <input type="hidden" name="resultsCardTable" value="<%= res.table %>">

                                                    <button type="submit" class="delete-note">Delete</button>
                                                </form>

                                                <button type="button" class="cancel-note">Cancel</button>

                                                <form action="/save-note" method="POST" target="hidden-frame">

                                                    <input type="hidden" name="resultCardId" value="<%= res.id %>">
                                                    <input type="hidden" name="resultsCardTable" value="<%= res.table %>">
                                                    <input type="hidden" name="noteText" value="<%= res.note %>">

                                                    <button type="submit" class="save-note">Save</button>
                                                </form>
                                                
                                            </div>
                                        </div>
                                        
                                    </div>
                                <% } else { %>

                                    <!-- Results card for a Granger Causalities Inputs Finding -->
                                    <div class="result-card <%= res.effect_for_color %>">

                                        <!-- Results Card Header -->
                                        <form action="/bookmark-result-card" method="POST" target="hidden-frame"> 
                                            <input type="hidden" name="resultCardId" value="<%= res.id %>" id="result-card-id">
                                            <input type="hidden" name="resultCardTable" value="<%= res.table %>" id="result-card-table">

                                            <div class="bookmark-wrapper selected">
                                                <div class="bookmark selected <%= res.effect_for_color %>"></div>
                                            </div>
                                        </form>

                                        <h3 class="<%= res.effect_for_color %>"><%= index+1 %>. <%= res.table %></h3>

                                        <dl>
                                            <!-- Variables Subsection in the Results Card -->
                                            <dt>Dependent Variable:</dt>
                                            <dd><%=res.dependent_variable%></dd>

                                            <dt>Independent Variable:</dt>
                                            <dd><%=res.independent_variable%></dd>

                                            <!-- Variables Relationship Subsection in the Results Card -->
                                            <dt>Causality</dt>
                                            <dd><%=res.causality%></dd>
                                            <dt>Significance Level</dt>
                                            <dd><%=res["significance_level(%)"] %>%</dd>

                                            <!-- Additional Details about the current Finding -->
                                            <dt>Years</dt>
                                            <dd>2000 - 2023</dd>
                                            <dt>Countries</dt>
                                            <dd>Europe</dd>
                                        </dl>

                                        <div class="notes-text-frame">
                                            <textarea placeholder="Write your note..."></textarea>
                                            
                                            <div>
                                                <form action="/delete-note" method="POST" target="hidden-frame">

                                                    <input type="hidden" name="resultCardId" value="<%= res.id %>">
                                                    <input type="hidden" name="resultsCardTable" value="<%= res.table %>">

                                                    <button type="submit" class="delete-note">Delete</button>
                                                </form>

                                                <button type="button" class="cancel-note">Cancel</button>

                                                <form action="/save-note" method="POST" target="hidden-frame">

                                                    <input type="hidden" name="resultCardId" value="<%= res.id %>">
                                                    <input type="hidden" name="resultsCardTable" value="<%= res.table %>">
                                                    <input type="hidden" name="noteText" value="<%= res.note %>">

                                                    <button type="submit" class="save-note">Save</button>
                                                </form>
                                                
                                            </div>
                                        </div>
                                    </div>
                                <% } %>
                            <% }); %>
                        <% } %>
                    </div>
                    <input type="hidden" name="isMainAppFlow" value="<%= isMainAppFlow %>" id="app-flow">
                    
                    <form action="/exit-bookmarks" method="POST">
                        <div class="buttons-div">

                            <button type="submit" class="back-btn">Back</button>
                        </div>
                    </form>
                    
                </div>
            </div>

            <footer> 
                <img class="stars-europe" src="/images/icon-stars-europe.svg" alt="Europe Stars Logo">
                <p class="europe-fund">Funded by the European Union</p>
                
                <a href="https://www.instagram.com/esspinproject/" target="_blank">
                    <img class="social-media-logo" src="/images/icon-social-instagram.svg" alt="Instagram Logo">
                </a>
                <a href="https://www.linkedin.com/company/91529913/admin/" target="_blank">
                    <img class="social-media-logo" src="/images/icon-social-linkedin.svg" alt="Linkedin Logo">
                </a>
                <a href="https://twitter.com/ESSPINproject" target="_blank">
                    <img class="social-media-logo" src="/images/icon-social-twitter.svg" alt="Twitter Logo">
                </a>
                <a href="https://www.youtube.com/channel/UC8TnkJ-TNzzQqb0Z01ogh5g">
                    <img class="social-media-logo" src="/images/icon-social-youtube.svg" alt="Youtube Logo">
                </a>
            </footer>
        </div>
        
        <script src="/scripts/header.js" charset="utf-8"></script>
        <script src="/scripts/bookmarks.js" charset="utf-8"></script>
        
    </body>
</html>